                        if (requestExistsTech.status >= 200 && requestExistsTech.status < 400) {
                            //console.log(dataE);


                            if ((element.val() == "") || dataE == "false" || (element.val() == null)) {
                                ///console.log("NOPEEEE" + element.val());
                                isValid = false;
                                element.css("border", "1px solid red");
                            }


                        } else {
                            isValid = false;
                            console.log('error')
                        }


                    }

                    requestExistsTech.send()
                }
            });


//////


            if (isValid == false) {
                return false;
            } else {
